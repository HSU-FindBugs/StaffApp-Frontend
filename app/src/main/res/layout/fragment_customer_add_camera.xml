<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.customer_manage.CustomerAddCameraFragment">

        <include
            android:id="@+id/fragment_customer_add_camera_toolbar"
            layout="@layout/toolbar_base"
            app:toolbarTitle="@{`카메라 등록`}" />

        <TextView
            android:id="@+id/fragment_customer_add_camera_name_tv"
            style="@style/h3_semi_bold_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_marginStart="16dp"
            android:text="카메라 이름"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/fragment_customer_add_camera_name_et"
            style="@style/text_field_style"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:paddingStart="20dp"
            android:background="@drawable/shape_rounded_rect_60dp"
            android:backgroundTint="@color/Blue300"
            android:hint="카메라를 이름을 입력하세요."
            android:textColorHint="@color/Blue500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_customer_add_camera_name_tv" />

        <TextView
            android:id="@+id/fragment_customer_add_camera_phone_tv"
            style="@style/h3_semi_bold_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:text="전화번호"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_customer_add_camera_name_et" />

        <EditText
            android:id="@+id/fragment_customer_add_camera_number_et"
            style="@style/text_field_style"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape_rounded_rect_60dp"
            android:backgroundTint="@color/Blue300"
            android:hint="카메라 기종 번호를 입력하세요."
            android:paddingStart="20dp"
            android:textColorHint="@color/Blue500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_customer_add_camera_phone_tv" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragment_customer_confirm_save_btn"
            style="@style/button1_style"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="@dimen/start_margin"
            android:layout_marginEnd="@dimen/end_margin"
            android:text="@string/btn_save"
            android:textColor="@color/Blue500"
            android:clickable="false"
            android:backgroundTint="@color/Blue300"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>