<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.customer_manage.CustomerConfirmFragment">

            <include
                android:id="@+id/fragment_customer_confirm_toolbar"
                layout="@layout/toolbar_base"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:toolbarTitle="@{`고객정보확인`}" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fragment_customer_info_cl"
                android:layout_width="0dp"
                android:layout_height="155dp"
                style="@style/name_style"
                android:backgroundTint="@color/Blue700"
                android:layout_marginTop="52dp"
                android:layout_marginStart="@dimen/start_margin"
                android:layout_marginEnd="@dimen/end_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/fragment_customer_profile_iv"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="20dp"
                    android:background="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearance="@style/Circle" />

                <TextView
                    android:id="@+id/fragment_customer_name_tv"
                    style="@style/h2_semi_bold_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="전세원"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/fragment_customer_profile_iv"
                    app:layout_constraintStart_toEndOf="@+id/fragment_customer_profile_iv"
                    app:layout_constraintTop_toTopOf="@+id/fragment_customer_profile_iv" />

                <TextView
                    android:id="@+id/fragment_customer_name_sub_tv"
                    style="@style/body2_regular_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="8dp"
                    android:text="고객님"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toEndOf="@+id/fragment_customer_name_tv"
                    app:layout_constraintTop_toTopOf="@+id/fragment_customer_name_tv" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/fragment_customer_delete_btn"
                    style="@style/button1_style"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/Blue500"
                    android:text="삭제"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/fragment_customer_phone_num_tv"
                    style="@style/body2_regular_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:text="010-1234-5678"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="@+id/fragment_customer_name_tv"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_customer_name_tv" />

                <TextView
                    android:id="@+id/fragment_customer_membership_tv"
                    style="@style/body2_regular_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="6개월 멤버십"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toEndOf="@+id/fragment_customer_phone_num_tv"
                    app:layout_constraintTop_toTopOf="@+id/fragment_customer_phone_num_tv" />

                <TextView
                    android:id="@+id/fragment_customer_address_tv"
                    style="@style/body2_regular_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="경기도 하남시 00동"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="@+id/fragment_customer_phone_num_tv"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_customer_phone_num_tv" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/fragment_customer_service_title_tv"
                style="@style/h3_semi_bold_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="고객 서비스 정보"
                android:textColor="@color/Blue700"
                android:layout_marginTop="40dp"
                android:layout_marginStart="@dimen/start_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_customer_info_cl" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>