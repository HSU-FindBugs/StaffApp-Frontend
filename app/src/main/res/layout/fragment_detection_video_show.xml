<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.customer_manage.detection.DetectionVideoShowFragment">

        <include
            android:id="@+id/fragment_detection_video_show_toolbar"
            layout="@layout/toolbar_base"
            app:toolbarTitle="@{`감지 영상`}"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="68dp"
            android:background="@color/Black700"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/fragment_detection_video_show_guideline_35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.30"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/fragment_detection_video_show_guideline_60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.65"/>

            <TextView
                android:id="@+id/fragment_detection_video_show_camera_time_tv"
                style="@style/body2_regular_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="12:52:03 PM"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/fragment_detection_video_show_guideline_35"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/fragment_detection_video_show_preview__iv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/Black700"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/fragment_detection_video_show_guideline_35"
                app:layout_constraintBottom_toBottomOf="@id/fragment_detection_video_show_guideline_60" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>